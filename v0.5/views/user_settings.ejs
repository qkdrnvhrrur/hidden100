<script language="javascript">
    function validate(){
        let pass1 = document.getElementById("pass1").value;
        let pass2 = document.getElementById("pass2").value;
        if(pass1 != pass2){
            alert("변경 비밀번호가 서로 다릅니다. 다시 입력해주세요!");
            return false;
        }
        return true;
    }
</script>
<br><br>
<div class="container">
    <div class="row">
        <div class="col-4"></div>
        <div class="col-4">
            <h1>정보수정</h1>
        </div>
    </div>
    <br/>

    <form name="settings" onsubmit="return validate()" method=post action="/users/profile">
        <div class="row">
            <div class="col-4"></div>
            <div class="col-4">
                <input type="text" class="form-control" name="id" placeholder="아이디">
            </div>
        </div>
        <br/>
        
        <div class="row">
            <div class="col-4"></div>
            <div class="col-4">
                <input type="password" class="form-control" name="pass1" placeholder="변경 비밀번호">
            </div>
        </div>
        <br/>

        <div class="row">
            <div class="col-4"></div>
            <div class="col-4">
                <input type="password" class="form-control" name="pass2" placeholder="변경 비밀번호 확인">
            </div>
        </div>
        <br/>

        <div class="row">
            <div class="col-4"></div>
            <div class="col-4">
                <input type="text" class="form-control" name="email" placeholder="변경 이메일 ('@' 포함해서 입력해주세요)">
            </div>
        </div>
        <br/>

        <div class="row">
            <div class="col-4"></div>
            <div class="col-4">
                <input type="text" class="form-control" name="phone" placeholder="변경 전화번호 ('-' 없이 숫자만 입력해주세요)">
            </div>
        </div>
        <br/>

        <div class="row">
            <div class="col-4"></div>
            <div class="col-4">
                <input type="text" class="form-control" name="addr" placeholder="변경 주소">
            </div>
        </div>
        <br/><br/>

        <div class="row">
            <div class="col-4"></div>
            <div class="col-4">
                <button type="submit" name="submit" class="btn">수정하기</button>
            </div>
        </div>
        <br/><br/>
    </form>
</div>
