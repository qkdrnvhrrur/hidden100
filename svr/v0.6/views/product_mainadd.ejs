<%# 상품 페이지 1행 main_good1의 데이터 사용%>
<div class="row" style="padding: 2%; margin: 0px ">
	<% goodslist.forEach(function(item, i){ %>
		<div class="col-3 product">
 			<div style="height:300px; text-align: center;">
 				<%img='/img/goods/'+item.goo_img%>
			<img src=<%=img%> style="max-width:90%; max-height:100% "></div>
			<p>상품번호 : <%=item.goo_id%></p>

			<p><%=item.goo_name%></p>
			<p><%=item.goal_price%> 원 목표</p>
			<%for(let i=0;i<total.length;i++){
                		if(total[i].goo_id==item.goo_id){%>
                    		<p><%=total[i].total%>원 적립 됨</p>
                    			<%break;
                			} else if(i==(total.length-1)){%>
                    			<p>0원 적립 됨</p>
                			<%}}%>
		</div>
 	<%})%>
</div>


	
